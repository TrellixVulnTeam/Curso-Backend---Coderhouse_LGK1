extends layouts/head.pug

block viewProduct

  body 
      div(class="container mt-3")
        if productsExists 
            div(class="table-responsive")
                table(class="table table-dark")
                    tr(style="color: yellow;")
                        th='Title'
                        th='Price'
                        th='Thumbnail'
                    
                        each producto in productos
                            tr
                                td=producto.title
                                td=producto.price
                                td
                                    img(width="40", src=producto.thumbnail)
        else
            h3(class="alert alert-danger")='No se encontraron productos'
        br
        a(href="/" type="button" class="btn btn-danger mt-3" )='Volver'